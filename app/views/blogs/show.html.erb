
<p id="notice"><%= notice %></p>
<div class="form-group col-md-6 col-md-offset-3">
<p>
  <%= image_tag @blog.image %>
</p>
</div>
<div class="form-group col-md-6 col-md-offset-3">
<p>
  <strong>User:</strong>
  <%= @blog.user.email.split('@')[0].titleize %>
</p>
</div>
<div class="form-group col-md-6 col-md-offset-3">
<p>
  <strong>Category:</strong>
  <%= @blog.category.name.titleize %>
</p>
</div>
<div class="form-group col-md-6 col-md-offset-3">
<p>
  <strong>Title:</strong>
  <%= @blog.title.titleize %>
</p>
</div>

<div class="form-group col-md-6 col-md-offset-3">
<p>
  <strong>Description:</strong>
  <%= @blog.description %>
</p>
</div>
<div class="form-group col-md-6 col-md-offset-3">

<%= render partial: "comments/comments", locals: {commentable: @blog} %>
<%= render partial: "comments/form", locals: {commentable: @blog} %>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
</div>